@model SearchableQueryViewModel
@{
    ViewData["Title"] = "SearchQuery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Search any text within NY articles</h1>

@using (Html.BeginForm(null, null, FormMethod.Post,
    new { @action = "https://api.nytimes.com/svc/search/v2/articlesearch.json?q=" }))
{
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Search text</label>
        <div class="col-sm-10">
            <input asp-for="SearchText"
                class="form-control" />
            <span asp-validation-for="SearchText"
                class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <button type="submit"
            id="search"
            class="btn btn-primary">
            Search
        </button>
    </div>
}

<ul id="nyTimes"></ul>

@section Scripts
{
    <script src="~/js/search.js" asp-append-version="true"></script>
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}